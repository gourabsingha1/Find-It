<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".activity.LoginOptionsActivity">

    <ImageView
        android:id="@+id/ivLoginOptionsClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_close_24" />

    <ImageView
        android:id="@+id/ivFindItLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/finditlogo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLoginOptionsGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Continue With Google"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/ivFindItLogo"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLoginOptionsPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Continue With Phone"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnLoginOptionsGoogle"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLoginOptionsEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Continue With Email"
        app:cornerRadius="8dp"
        android:layout_alignParentBottom="true"
        app:layout_constraintTop_toBottomOf="@id/btnLoginOptionsPhone"/>

</RelativeLayout>